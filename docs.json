{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Hyperrail - Documentation",
  "appearance": {"default": "dark", "strict": true},
  "colors": {
    "primary": "#B5FD85",
    "light": "#B5FD85",
    "dark": "#B5FD85"
  },
  "fonts": {
  "family": "IBM Plex Sans"
},
"styling": {"codeblocks": "dark"},
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting started",
            "icon": "play",
            "pages": [
              "index",
              "KYB Verification"
            ]
          },
          {
            "group": "How We Operate",
            "icon": "building",
            "pages": [
              "Merchants",
              "Liquidity Providers"
            ]
          },
          {
            "group": "Features",
            "icon": "star",
            "pages": [
              "Single Disbursement",
              "Spotflow Wallets",
              "Trades",
              "Settlements",
              "Transactions",
              "Your Team Members",
              "Account Management"
            ]
          },
          {
            "group": "Expert Desks",
            "icon": "user-tie",
            "pages": [
              "Support Channels",
              "FAQ"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/hyperrail-logo.svg",
    "dark": "/logo/hyperrail-logo.svg"
  },
  "navbar": {
     "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://app.spotflow.co/"
    }
  },
   "background": {
    "decoration": "grid",
    "color": {
      "light": "#ffffff",
       "dark": "#000"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}
