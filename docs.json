{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Hyperrail - Documentation",
  "appearance": {"default": "dark", "strict": true},
  "colors": {
    "primary": "#B5FD85",
    "light": "#B5FD85",
    "dark": "#B5FD85"
  },
  "fonts": {
  "family": "IBM Plex Sans"
},
"styling": {"codeblocks": "dark"},
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Hyperrail Wallets",
            "icon": "wallet",
            "pages": [
              "api-reference/hyperrail-wallet/get",
              "api-reference/hyperrail-wallet/get-balance-id",
              "api-reference/hyperrail-wallet/get-balance-currency"
            ]
          },
          {
            "group": "Hyperrail Quotes",
            "icon": "money-bill",
            "pages": [
              "api-reference/hyperrail-quote/create-quote",
              "api-reference/hyperrail-quote/get-quote-id",
              "api-reference/hyperrail-quote/get-quote-payment-id",
              "api-reference/hyperrail-quote/edit-quote-id"
            ]
          },
          {
            "group": "Exchange",
            "icon": "arrow-left-arrow-right",
            "pages": [
              "api-reference/exchange/create-trade",
              "api-reference/exchange/get-trade",
              "api-reference/exchange/get-trade-id",
              "api-reference/exchange/get-supported-trade-currency",
               "api-reference/exchange/get-trade-currency",
               "api-reference/exchange/get-supported-chain",
              "api-reference/exchange/get-supported-stable-currency",
              "api-reference/exchange/get-supported-fiat-currency"
            ]
          }

        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/hyperrail-logo.svg",
    "dark": "/logo/hyperrail-logo.svg"
  },
  "navbar": {
     "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://app.spotflow.co/"
    }
  },
   "background": {
    "decoration": "grid",
    "color": {
      "light": "#ffffff",
       "dark": "#000"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}
